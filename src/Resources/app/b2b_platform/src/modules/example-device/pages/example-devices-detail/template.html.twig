{% block example_devices_detail %}
    <div class="platform-page container platform-page--example_devices-detail">

        {% block example_devices_detail_loader %}
            <page-loader v-if="isLoading"></page-loader>
        {% endblock %}

        <template v-if="data">
            {% block example_devices_detail_title %}
                <div class="platform-title bg-light border-bottom">
                    <div class="title-action">
                        {% block example_devices_detail_title_action %}
                            <router-link to="/example-devices" class="btn">
                                <sw-icon name="default-arrow-simple-left"></sw-icon>
                            </router-link>
                        {% endblock %}
                    </div>
                    <div class="title-body">
                        {% block example_devices_detail_title_heading %}
                            <h1 class="title">{{ _initialData.name }}</h1>
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}

            {% block example_devices_detail_container %}
                <div class="container form-container">
                    <div class="card card-form">
                        {% block example_devices_detail_form %}
                            <form @submit.prevent="onFormSave" autocomplete="off">
                                {% block example_devices_detail_form_inner %}
                                    <div class="card-body">

                                        <div class="form-row">
                                            {% block example_devices_detail_form_name %}
                                                <div class="form-group col-12">
                                                    <label>{{ $trans('b2bPlatform.exampleDevices.fields.name') }}*</label>
                                                    {% block cost_center_detail_form_name_field %}
                                                        <input type="text"
                                                               class="form-control"
                                                               v-model="data.name"
                                                               v-validate="'required'"
                                                               name="name"
                                                               :data-vv-as="$trans('b2bPlatform.exampleDevices.fields.name')"
                                                               :class="{'is-invalid':errors.has('name')}">
                                                    {% endblock %}

                                                    {% block example_devices_detail_form_name_feedback %}
                                                        <div class="invalid-feedback"
                                                             :class="{'d-block':errors.has('name')}">
                                                            {{ errors.first('name') }}
                                                        </div>
                                                    {% endblock %}
                                                </div>
                                            {% endblock %}
                                        </div>

                                        <div class="form-row">
                                            {% block example_devices_detail_form_description %}
                                                <div class="form-group col-12">
                                                    <label>{{ $trans('b2bPlatform.exampleDevices.fields.description') }}</label>
                                                    {% block example_devices_detail_form_description_field %}
                                                        <input type="text" class="form-control"
                                                               v-model="data.description">
                                                    {% endblock %}
                                                </div>
                                            {% endblock %}
                                        </div>

                                        <div class="form-row">
                                            {% block example_devices_detail_form_comment %}
                                                <div class="form-group col-12">
                                                    <label>{{ $trans('b2bPlatform.exampleDevices.fields.serialNumber') }}</label>
                                                    {% block example_devices_detail_form_serialNumber_field %}
                                                        <input type="text" class="form-control"
                                                               v-model="data.serial_number">
                                                    {% endblock %}
                                                </div>
                                            {% endblock %}
                                        </div>

                                        <div class="form-row row">
                                            {% block example_devices_detail_form_comment %}
                                                <div class="form-group col-6">
                                                    <label>{{ $trans('b2bPlatform.exampleDevices.fields.startAt') }}</label>
                                                    {% block example_devices_detail_form_startAt_field %}
                                                        <input type="date" class="form-control"
                                                               v-model="data.start_at">
                                                    {% endblock %}
                                                </div>

                                                <div class="form-group col-6">
                                                    <label>{{ $trans('b2bPlatform.exampleDevices.fields.endAt') }}</label>
                                                    {% block example_devices_detail_form_endAt_field %}
                                                        <input type="date" class="form-control"
                                                               v-model="data.end_at">
                                                    {% endblock %}
                                                </div>
                                            {% endblock %}

                                        </div>
                                    </div>
                                {% endblock %}

                                {% block example_devices_detail_form_actions %}
                                    <div class="card-body d-flex mt-4">
                                        {% block employee_detail_form_actions_cancel %}
                                            <router-link to="/example-devices" class="btn btn-outline-secondary ml-auto mr-2">
                                                {{ $trans('b2bPlatform.actions.cancel') }}
                                            </router-link>
                                        {% endblock %}

                                        {% block example_devices_detail_form_actions_save %}
                                            <button type="submit" class="btn btn-primary" :disabled="!dataChanged">
                                                {{ $trans('b2bPlatform.actions.save') }}
                                            </button>
                                        {% endblock %}
                                    </div>
                                {% endblock %}
                            </form>
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}
        </template>
    </div>
{% endblock %}